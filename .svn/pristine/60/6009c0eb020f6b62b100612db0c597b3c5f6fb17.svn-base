

@mixin class-xsm() {
    @content;//将需要的样式集中在此
}
@mixin class-xmd() {
    @content;
}
@mixin class-xlg() {
    @content;
}

$sm:768px;
$md:992px;
$lg:1200px;

@mixin medias($size) {
    @if $size == xsm {
        @media only screen and (max-width:$sm) {
            @content;
        }
    }
    @else if $size == xmd {
        @media only screen and (max-width:$sm) {
            @content;
        }
    }
    @else if $size == xlg {
        @media only screen and (max-width:$sm) {
            @content;
        }
    }
}